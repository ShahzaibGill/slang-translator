{
  "manifest_version": 2,

  "name": "Comprehensive Dictionary",
  "description": "This extension allows for easy and comprehensive lookup of word definitions",
  "version": "1.0",

  "background": {
    "scripts": ["javascripts/background.js", "bower_components/jquery/dist/jquery.min.js"]
  },

  "browser_action": {
    "default_icon": "images/dictionary-icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
      "<all_urls>",
      "http://*/*",
      "https://*/*"
      ],

      "js": ["bower_components/jquery/dist/jquery.min.js", "javascripts/contentscript.js"],
      "css": [],
      "all_frames": false
    }
  ]
}